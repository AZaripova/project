<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:h='urn:import:ru.datateh.GWTACT.client.activity'>
    <ui:style>
        .important {
        font-weight: bold;
        }
    </ui:style>
        <g:HTMLPanel width="800" height="100%" styleName="dialogVPanel" >
            <center>
            <g:HorizontalPanel width="800px" height="100px" horizontalAlignment="ALIGN_CENTER">
                <g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
                    <g:Button styleName="{style.important}" ui:field="addButton" text="Добавить" width="100" height="50" />
                </g:Cell>
                <g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
                    <g:Button ui:field="showButton" text="Показать" styleName="{style.important}" width="100" height="50"/>
                </g:Cell>
            </g:HorizontalPanel>
            </center>
            <center>
                <h:OneWidgetLayoutPanel width="800px" height="100%" ui:field='panel' />
            </center>
        </g:HTMLPanel>
</ui:UiBinder> 